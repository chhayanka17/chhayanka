#include <stdio.h>
int main(){
    //deletion in an array
    int arr[100];
    printf("Enter 5 elements:\n");
    for(int i = 0; i < 5; i++){
        scanf("%d", &arr[i]);
    }
    int n = 5; // current number of elements
    int target;
    printf("Enter element to delete: ");
    scanf("%d", &target);
    int found = 0;
    for(int i = 0; i < n; i++){
        if(arr[i] == target){
            found = 1;
            for(int j = i; j < n - 1; j++){
                arr[j] = arr[j + 1];
            }
            n--; // reduce size of array
            break;
        }
    }
    if(found){
        printf("Element deleted. New array:\n");
        for(int i = 0; i < n; i++){
            printf("%d ", arr[i]);
        }
        printf("\n");
    } else {
        printf("Element not found in the array.\n");
    }
    return 0;
}
